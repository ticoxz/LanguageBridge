{
    "manifest_version": 3,
    "name": "LanguageBridge",
    "version": "1.0",
    "description": "Invisible Copilot for Meeting Translation",
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "tabCapture"
    ],
    "host_permissions": [
        "*://meet.google.com/*",
        "*://zoom.us/*"
    ],
    "background": {
        "service_worker": "assets/background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "*://meet.google.com/*",
                "*://zoom.us/*"
            ],
            "js": [
                "assets/content.js"
            ],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "assets/*"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}